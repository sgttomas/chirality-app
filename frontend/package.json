{
  "name": "frontend",
  "version": "1.3.0",
  "private": true,
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "desktop:dev": "npx electron@33.3.1 .",
    "desktop:pack": "npm run build && npx electron-builder@25.1.8 --dir --publish never",
    "desktop:dist": "npm run build && npx electron-builder@25.1.8 --publish never",
    "desktop:dist:unsigned": "unset CSC_LINK CSC_KEY_PASSWORD CSC_NAME APPLE_ID APPLE_APP_SPECIFIC_PASSWORD APPLE_TEAM_ID; CSC_IDENTITY_AUTO_DISCOVERY=false npm run desktop:dist",
    "desktop:dist:release": "npm run build -- --webpack && npx electron-builder@25.1.8 --publish never",
    "harness:validate:toolkit": "./scripts/validate-toolkit.mjs",
    "harness:validate:section8": "./scripts/validate-harness-section8.mjs",
    "harness:validate:premerge": "./scripts/validate-harness-premerge.mjs"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.37",
    "ansi-to-html": "^0.7.2",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "electron": "^33.3.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "build": {
    "appId": "ai.chirality.app",
    "productName": "Chirality App",
    "icon": "electron/icons/icon.png",
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "afterSign": "electron/notarize.cjs",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "!.next/dev{,/**}",
      "!.next/cache{,/**}",
      "public/**/*",
      "node_modules/**/*",
      "!node_modules/**/.bin{,/**}",
      "!node_modules/**/{test,tests,__tests__,__mocks__,example,examples,doc,docs}{,/**}",
      "!node_modules/**/*.map",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/*.md",
      "!node_modules/**/*.markdown",
      "!node_modules/**/tsconfig*.json",
      "package.json",
      "next.config.mjs"
    ],
    "extraResources": [
      {
        "from": "../agents",
        "to": "instruction-root/agents"
      },
      {
        "from": "..",
        "to": "instruction-root",
        "filter": [
          "*.md"
        ]
      },
      {
        "from": "../design",
        "to": "instruction-root/design"
      },
      {
        "from": "../init",
        "to": "instruction-root/init"
      }
    ],
    "mac": {
      "icon": "electron/icons/icon.png",
      "target": [
        "dmg"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.inherit.plist",
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "icon": "electron/icons/icon.png",
      "publisherName": "REPLACE_WITH_LEGAL_PUBLISHER_NAME",
      "signingHashAlgorithms": [
        "sha256"
      ],
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "artifactName": "${productName} Setup ${version}-${arch}.${ext}"
    }
  }
}
